<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/AppTheme.NoActionBar"
    android:id="@+id/main_rlxaydungcase"
    tools:context="com.att.attcase.XayDungCase">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/rl_xaydungcase">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:id="@+id/img_case"
                android:src="@drawable/ip_iphone6"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rl_xaydungcase_icon"></RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ll_xaydungcase"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"></LinearLayout>

        <ImageView
            android:id="@+id/img_theme"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/none"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/img_anh_mat_sau_khong_che"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ip_iphone6test"
        android:scaleType="fitXY"/>


    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_back"
        android:id="@+id/btn_back"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_order"
        android:layout_alignParentRight="true"
        android:id="@+id/btn_save"/>

    <RelativeLayout
        android:id="@+id/rl_icon"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/navigation"
        android:layout_marginBottom="10dp"
        android:visibility="gone">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:id="@+id/rc_icon"
            android:visibility="visible"
            android:scrollbars="horizontal"></android.support.v7.widget.RecyclerView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/navigation"
        android:layout_marginBottom="10dp"
        android:visibility="gone">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rc_theme1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:visibility="visible"
            android:layout_alignParentBottom="true"
            android:scrollbars="horizontal"></android.support.v7.widget.RecyclerView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rc_theme2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:visibility="visible"
            android:scrollbars="horizontal"
            android:layout_above="@+id/rc_theme1"></android.support.v7.widget.RecyclerView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/navigation"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:id="@+id/ll_congcu">
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_refresh"
            android:layout_marginStart="20dp"
            android:id="@+id/btn_refresh"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_random"
            android:layout_marginStart="20dp"
            android:id="@+id/btn_random"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/navigation"
        android:id="@+id/rl_danhsachanh"
        android:layout_marginBottom="10dp"
        android:visibility="visible">
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_image"
            android:id="@+id/btn_mokhoanh"
            android:layout_marginStart="20dp"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/btn_mokhoanh"
            android:layout_marginStart="10dp"
            android:id="@+id/rc_anhduocchon"
            android:visibility="visible"
            android:scrollbars="horizontal">

        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="20dp" />

    </FrameLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:menu="@menu/menuxaydungcase"
        android:background="@color/blue"
        android:layout_alignParentBottom="true" />


</RelativeLayout>
